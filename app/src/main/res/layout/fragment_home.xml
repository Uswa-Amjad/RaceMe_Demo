<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:gravity="center"
    android:padding="24dp" android:background="@color/raceme_cream"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/btnReports"
        android:text="@string/go_reports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/vt323"
        android:backgroundTint="@color/raceme_brick"/>

    <Button android:id="@+id/btnProfile" android:text="@string/go_profile"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:fontFamily="@font/vt323" android:backgroundTint="@color/raceme_brick"/>

    <Button android:id="@+id/btnBadges" android:text="@string/go_badges"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="12dp" android:fontFamily="@font/vt323"
        android:backgroundTint="@color/raceme_brick"/>

    <Button android:id="@+id/btnQuotes" android:text="@string/go_quotes"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="12dp" android:fontFamily="@font/vt323"
        android:backgroundTint="@color/raceme_brick"/>

    <Button android:id="@+id/btnLogout" android:text="@string/go_logout"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="12dp" android:fontFamily="@font/vt323"
        android:backgroundTint="@color/raceme_brick_dark"/>
</LinearLayout>
