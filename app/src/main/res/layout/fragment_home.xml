<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="20dp" android:background="@color/cream">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView
            android:text="RaceMe" android:textSize="28sp" android:textStyle="bold"
            android:textColor="@color/graphite" android:paddingBottom="12dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnStart" android:text="Start Race / GPS Tracking"
            android:layout_width="match_parent" android:layout_height="56dp"
            android:background="@drawable/retro_button_bg" android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnCreate" android:text="Create Race"
            android:layout_width="match_parent" android:layout_height="56dp"
            android:background="@drawable/retro_button_bg" android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnChallenges" android:text="Challenges"
            android:layout_width="match_parent" android:layout_height="56dp"
            android:background="@drawable/retro_button_bg" android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnBadges" android:text="Badges"
            android:layout_width="match_parent" android:layout_height="56dp"
            android:background="@drawable/retro_button_bg" android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>

        <!-- add more dashboard buttons as needed -->
    </LinearLayout>
</ScrollView>
