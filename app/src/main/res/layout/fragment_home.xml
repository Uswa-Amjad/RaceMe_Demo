<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="20dp" android:background="@color/cream">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView
            android:text="RaceMe" android:textSize="28sp" android:textStyle="bold"
            android:textColor="@color/graphite" android:paddingBottom="12dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <!-- Quote of the Day -->
        <TextView
            android:id="@+id/tvQuote"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="“Stay consistent. Small steps win races.”"
            android:textSize="16sp" android:textColor="@color/graphite"
            android:padding="12dp"
            android:background="@drawable/retro_bar_bg"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnStart" android:text="Start Race / GPS Tracking"
            android:layout_width="match_parent" android:layout_height="56dp"
            android:background="@drawable/retro_button_bg" android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnCreate" android:text="Create Race"
            android:layout_width="match_parent" android:layout_height="56dp"
            android:background="@drawable/retro_button_bg" android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnChallenges" android:text="Challenges"
            android:layout_width="match_parent" android:layout_height="56dp"
            android:background="@drawable/retro_button_bg" android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnBadges" android:text="Badges"
            android:layout_width="match_parent" android:layout_height="56dp"
            android:background="@drawable/retro_button_bg" android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>

        <!-- NEW: Reminder, Weekly, Monthly -->
        <Button
            android:id="@+id/btnReminder"
            android:text="Set Reminder"
            android:layout_width="match_parent" android:layout_height="56dp"
            android:background="@drawable/retro_button_bg" android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnWeeklyReport"
            android:text="Weekly Report"
            android:layout_width="match_parent" android:layout_height="56dp"
            android:background="@drawable/retro_button_bg" android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnMonthlyReport"
            android:text="Monthly Report"
            android:layout_width="match_parent" android:layout_height="56dp"
            android:background="@drawable/retro_button_bg" android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
</ScrollView>

