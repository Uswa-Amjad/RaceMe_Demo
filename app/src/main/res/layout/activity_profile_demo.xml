<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FCF4F1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:text="Edit Profile"
            android:fontFamily="@font/vt323"
            android:textColor="#2A2323"
            android:textSize="28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Photo row -->
        <LinearLayout
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:scaleType="centerCrop"
                android:src="@android:color/transparent"
                android:background="@drawable/retro_circle_chip"
                android:contentDescription="Profile photo" />

            <TextView
                android:text=" Upload Picture"
                android:fontFamily="@font/vt323"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/retro_button_bg"
                android:id="@+id/btnPickPhoto"
                android:layout_marginStart="12dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:layout_width="wrap_content"
                android:layout_height="48dp" />
        </LinearLayout>

        <!-- Display name -->
        <TextView
            android:text="Display name"
            android:fontFamily="@font/vt323"
            android:textColor="#6E5C55"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etDisplayName"
            android:hint="danielle"
            android:fontFamily="@font/vt323"
            android:textSize="18sp"
            android:background="@drawable/retro_input_bg"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <!-- Bio -->
        <TextView
            android:text="Bio"
            android:fontFamily="@font/vt323"
            android:textColor="#6E5C55"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etBio"
            android:hint="Chasing steps, one day at a time ðŸ’«"
            android:fontFamily="@font/vt323"
            android:textSize="18sp"
            android:minLines="3"
            android:maxLines="5"
            android:gravity="top|start"
            android:background="@drawable/retro_input_bg"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Save -->
        <TextView
            android:id="@+id/btnSave"
            android:text="Save"
            android:fontFamily="@font/vt323"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/retro_button_bg"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="52dp" />

        <!-- Preview Card -->
    </LinearLayout>
</ScrollView>
