<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="16dp"
    android:gravity="center" android:background="@drawable/retro_card_bg"
    android:layout_width="match_parent" android:layout_height="140dp"
    android:layout_margin="8dp">

    <TextView android:id="@+id/tvBadgeIcon" android:text="🏆"
        android:textSize="22sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvBadgeTitle" android:text="First Run"
        android:textStyle="bold" android:textColor="@color/graphite"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvBadgeState" android:text="Unlocked"
        android:textColor="@color/muted" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>
