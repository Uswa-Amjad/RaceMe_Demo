<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FDF6EC"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="ðŸ"
                android:textSize="28sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="RaceMe"
                android:fontFamily="@font/vt323"
                android:textSize="34sp"
                android:textColor="#2A2323"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:text="Welcome back!"
            android:fontFamily="@font/vt323"
            android:textSize="20sp"
            android:textColor="#6E6253"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="#D8CFC2"
            app:strokeWidth="1dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:background="@drawable/retro_card_bg"
                android:orientation="vertical"
                android:padding="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Email -->
                <TextView
                    android:text="Email"
                    android:fontFamily="@font/vt323"
                    android:textSize="18sp"
                    android:textColor="#6E6253"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:hint="you@example.com"
                    android:fontFamily="@font/vt323"
                    android:textSize="18sp"
                    android:background="@drawable/retro_input_bg"
                    android:inputType="textEmailAddress"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"/>

                <!-- Password -->
                <TextView
                    android:text="Password"
                    android:fontFamily="@font/vt323"
                    android:textSize="18sp"
                    android:textColor="#6E6253"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:hint="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                    android:fontFamily="@font/vt323"
                    android:textSize="18sp"
                    android:background="@drawable/retro_input_bg"
                    android:inputType="textPassword"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"/>

                <!-- Forgot row -->
                <TextView
                    android:text="Forgot password?"
                    android:fontFamily="@font/vt323"
                    android:textColor="#6A5AE0"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Login Button -->
                <TextView
                    android:text="Log In"
                    android:fontFamily="@font/vt323"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/retro_button_bg"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"/>

                <!-- Divider -->

                <!-- Google-ish Button (visual only) -->
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Footer -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="New here? "
                android:fontFamily="@font/vt323"
                android:textSize="18sp"
                android:textColor="#6E6253"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Create an account"
                android:fontFamily="@font/vt323"
                android:textColor="#6A5AE0"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
