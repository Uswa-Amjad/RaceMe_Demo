<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/raceme_cream"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnWeekly"
            android:text="@string/weekly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/raceme_brick"
            android:fontFamily="@font/vt323"/>

        <Button
            android:id="@+id/btnMonthly"
            android:text="@string/monthly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:backgroundTint="@color/raceme_brick"
            android:fontFamily="@font/vt323"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvReportTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/raceme_on_cream"
        android:paddingTop="16dp"
        android:fontFamily="@font/vt323"
        android:text="@string/weekly_report" />

    <TextView
        android:id="@+id/tvSteps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="12dp"
        android:textColor="@color/raceme_on_cream"
        android:fontFamily="@font/vt323"
        android:text="Steps: 0" />

    <TextView
        android:id="@+id/tvStreak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:textColor="@color/raceme_on_cream"
        android:fontFamily="@font/vt323"
        android:text="Active days: 0 / 0" />
</LinearLayout>
