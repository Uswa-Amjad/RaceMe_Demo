<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#8F4138"/>   <!-- darker/pressed -->
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="#6F2F28"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#B2574B"/>   <!-- brick -->
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="#93453B"/>
        </shape>
    </item>
</selector>
